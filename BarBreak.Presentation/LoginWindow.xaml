<Window x:Class="BarBreak.Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarBreak.Presentation"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="100">
            <TextBlock FontSize="20" FontWeight="Bold" Margin="0,20,0,10" HorizontalAlignment="Center">Log in</TextBlock>
            <TextBox x:Name="loginTextBox" Width="440" Height="30" Margin="0,10,0,0" VerticalContentAlignment="Center">Login</TextBox>
            <TextBox x:Name="passTextBox"  Width="440" Height="30" Margin="0,10,0,0" VerticalContentAlignment="Center">Password</TextBox>
            <Button Click="LoginClick" Margin="0,10,0,0" Width="440" Height="30" Background="Blue" Foreground="White">Log in</Button>
        </StackPanel>
    </Grid>
</Window>
